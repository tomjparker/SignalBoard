/* ite’s default behavior (and moduleResolution: "bundler") means TypeScript will automatically:

Include all .d.ts files under the include array

And load any ambient types from your "include" paths (e.g., "src" and "types") */

{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",   
    "jsxImportSource": "react",           // Vite + React 17+ with the new JSX transform
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "incremental": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths/Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* No output — Vite handles build */
    "noEmit": true
  },

  "include": [
    "src",
    "global.d.ts",
    "types"
  ],

  "exclude": ["node_modules", "dist"]
}


