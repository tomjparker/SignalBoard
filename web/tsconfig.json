{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",                  // Vite + React 17+ with the new JSX transform
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "incremental": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths/Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* No output â€” Vite handles build */
    "noEmit": true
  },

  "include": [
    "src",
    "global.d.ts"       // ðŸ‘ˆ add your CSS vars augmentation here
  ],

  "exclude": ["node_modules", "dist"]
}


