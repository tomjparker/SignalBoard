generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IssueStatus {
  open
  in_progress
  done
}

model Board {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique   
  issues    Issue[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Issue {
  id          String      @id @default(cuid())
  boardId     String
  board       Board       @relation(fields: [boardId], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      IssueStatus @default(open)  // typed instead of plain string
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([boardId, createdAt])          // common list/sort pattern - compound index: the DB optimizes queries that filter by boardId and sort or filter by createdAt.
  @@index([status])   // Index basically premaps certain columns to increase speed. 
}